{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["./lib/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@contexts/*": ["src/contexts/*"]
    },
    "incremental": true,
    "module": "esnext",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "additional.d.ts", "src/app/**/*", "src/app/*", "pages/**/*", ".next/types/**/*.ts", "src/utils/get-url.ts", "**/*.ts", "**/*.tsx", "src/utils/helper.js", "src/components", "src/utils/jwtUtility.js"],
  "exclude": ["node_modules"]
}
